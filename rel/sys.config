[
    {slager,
        [
            {format, slager},
            {type, lager}
        ]
    },
    {lager, [
        {colored, true},
        {
            colors,
            [
                {debug, "\e[0:38m"},
                {info, "\e[1;32m"},
                {notice, "\e[1;36m"},
                {warning, "\e[1;33m"},
                {error, "\e[1;31m"},
                {critical, "\e[1;35m"},
                {alert, "\e[1;44m"},
                {emergency, "\e[1;41m"}
            ]
        },
        {log_root, "/opt/logs/slager/"},
        {async_threshold, 2000},
        {async_threshold_window, 50},
        {error_logger_redirect, true},
        {crash_log, "crash.log"},
        {crash_log_msg_size, 655360},
        {crash_log_size, 524288000},
        {crash_log_date, "$D0"},
        {crash_log_count, 100},
        {error_logger_hwm, 100},

        {handlers, [
            {lager_console_backend, [debug]},
            {lager_file_backend, [
                {formatter_config, [date, " ", time, " ", module, ":", function, ":", line, " ", " [", severity, "] ", pid, " ", " ", key, " ", message, "\n"]},
                {formatter, lager_default_formatter},
                {file, "console.log"},
                {level, debug}
            ]},
            {lager_file_backend, [
                {formatter_config, [date, " ", time, " ", module, ":", function, ":", line, " ", " [", severity, "] ", pid, " ", key, " ", message, "\n"]},
                {formatter, lager_default_formatter},
                {size, 104857600},
                {date, "$D0"},
                {count, 30},
                {file, "debug.log"},
                {level, debug}
            ]},
            {lager_file_backend, [
                {formatter_config, [date, " ", time, " ", module, ":", function, ":", line, " ", " [", severity, "] ", pid, " ", key, " ", message, "\n"]},
                {formatter, lager_default_formatter},
                {size, 104857600},
                {date, "$D0"},
                {count, 30},
                {file, "info.log"},
                {level, info}
            ]},
            {lager_file_backend, [
                {formatter_config, [date, " ", time, " ", module, ":", function, ":", line, " ", " [", severity, "] ", pid, " ", key, " ", message, "\n"]},
                {formatter, lager_default_formatter},
                {size, 104857600},
                {date, "$D0"},
                {count, 30},
                {file, "warning.log"},
                {level, warning}
            ]},
            {lager_file_backend, [
                {formatter_config, [date, " ", time, " ", module, ":", function, ":", line, " ", " [", severity, "] ", pid, " ", key, " ", message, "\n"]},
                {formatter, lager_default_formatter},
                {size, 104857600},
                {date, "$D0"},
                {count, 30},
                {file, "error.log"},
                {level, error}
            ]}
        ]},
        {extra_sinks,
            [
                {sdebug_lager_event,
                    [
                        {handlers, [
                            {lager_file_backend, [
                                {formatter_config, [date, " ", time, " ", key, " ", message, "\n"]},
                                {file, "collect/debug.log"},
                                {level, debug},
                                {size, 104857600},
                                {date, "$D0"},
                                {count, 30}
                            ]
                            }]
                        }
                    ]
                },
                {sinfo_lager_event,
                    [
                        {handlers, [
                            {lager_file_backend, [
                                {formatter_config, [date, " ", time, " ", key, " ", message, "\n"]},
                                {file, "collect/info.log"},
                                {level, info},
                                {size, 104857600},
                                {date, "$D0"},
                                {count, 30}
                            ]
                            }]
                        }
                    ]
                },
                {swarning_lager_event,
                    [
                        {handlers, [
                            {lager_file_backend, [
                                {formatter_config, [date, " ", time, " ", key, " ", message, "\n"]},
                                {file, "collect/warning.log"},
                                {level, warning},
                                {size, 104857600},
                                {date, "$D0"},
                                {count, 30}
                            ]
                            }]
                        }
                    ]
                },
                {serror_lager_event,
                    [
                        {handlers, [
                            {lager_file_backend, [
                                {formatter_config, [date, " ", time, " ", key, " ", message, "\n"]},
                                {file, "collect/error.log"},
                                {level, error},
                                {size, 104857600},
                                {date, "$D0"},
                                {count, 30}
                            ]
                            }]
                        }
                    ]
                }
            ]
        }
    ]}

].
